<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chat de MusicHub</title>
    <style>
        body, html {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        .sidebar {
            width: 200px;
            height: 100%;
            background-color: #333;
            position: fixed;
            top: 0;
            left: 0;
            transition: left 0.3s;
            z-index: 1000;
            overflow-y: auto;
        }
        .sidebar.show {
            left: 0;
        }
        .navbar-toggle {
            background-color: transparent;
            color: #fff;
            border: none;
            padding: 10px;
            cursor: pointer;
            position: absolute;
            top: 10px;
            left: 10px;
            z-index: 2000;
            font-size: 20px;
        }
        .navbar-toggle:hover {
            color: #9b3ff7;
        }
        .container {
            margin-left: 200px;
            padding: 20px;
            height: 100%;
            box-sizing: border-box;
            display: flex;
            justify-content: center;
            align-items: center;
            
        }
        #chat-container {
            background-color: #232323;
            padding: 20px;
            border-radius: 8px;
            width: 1000px; /* Ancho del chat */
            height: 500px;
            border: 2px solid #6a6a6a; /* Color del borde del chat */
            
        }
        #chat-messages {
            height: calc(100% - 60px);
            overflow-y: auto;
            margin-bottom: 10px;
            flex-direction: column;
            display: flex;
        }
        
        #input-container {
            display: flex;
            align-items: center;
            margin-top: 10px; /* Ajusta el margen superior según sea necesario */
        }
        #user-input {
            width: calc(100% - 100px); /* Ancho del campo de entrada */
            padding: 8px;
            margin-right: 5px;
            border-radius: 4px;
            border: 1px solid #666;
            background-color: #555555;
            color: #fff;
        }

        #chat-messages > .user-message {
            /*border: 1px solid #060606;*/ /* Borde del mensaje del usuario */
            color: #ffffff; /* Color del texto del mensaje del usuario */
            margin-bottom: 10px;
            border-radius: 10px;
            padding: 8px;
            display: inline-block;
            background-color: #0e5924;
            align-self: flex-end;
        }

        #chat-messages > .bot-message {
            /*border: 1px solid #030303;*/ /* Borde del mensaje del bot */
            color: #fefefe; /* Color del texto del mensaje del bot */
            margin-bottom: 10px;
            border-radius: 10px;
            padding: 8px;
            background-color: #3e3d3d;
            align-self: flex-start;
        }

        
        #send-btn {
            background-color: #0e5924;
            color: #fff;
            border: none;
            border-radius: 4px;
            padding: 8px 16px;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        #send-btn:hover {
            background-color: #101010;
        }

       


    </style>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="sidebar" id="sidebar">
        <div class="header-container">
            <h2>MusicHub</h2>
        </div>
        <ul>
            <li><a href="http://localhost:3000/api/v1/albums">Álbumes</a></li>
            <li><a href="#">Canciones</a></li>
            <li><a href="http://localhost:3000/api/v1/chat">Chat</a></li>
        </ul>
    </div>
    
    <button class="navbar-toggle" id="navbar-toggle">&#9776;</button>
    <div class="container">
        <div id="chat-container">
            <div id="chat-messages"></div>
            <div id="input-container">
                <input type="text" id="user-input" placeholder="Type your message...">
                <button id="send-btn">Send</button>
            </div>
        </div>
    </div>
    <script>
        const sidebar = document.getElementById('sidebar');
        const navbarToggle = document.getElementById('navbar-toggle');
        
        navbarToggle.addEventListener('click', () => {
            sidebar.classList.toggle('show');
        });
        
        async function sendMessage() {
            const userInput = document.getElementById('user-input').value;
            const chatMessages = document.getElementById('chat-messages');
            chatMessages.innerHTML += `<div class="user-message"><strong>Tú: </strong> ${userInput}</div>`;
            document.getElementById('user-input').value = ''; // Limpiar el campo de entrada

            const response = await fetch('/send-message', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ message: userInput })
            });
            const data = await response.json();
            chatMessages.innerHTML += `<div class="bot-message"><strong>MusicHub: </strong> ${data.message}</div>`;
        }

        document.getElementById('send-btn').addEventListener('click', sendMessage);
    </script>
</body>
</html>
