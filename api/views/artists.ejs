<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Artistas</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="sidebar" id="sidebar">
        <div class="header-container">
            <h2>MusicHub</h2>
        </div>
        <ul>
            <li><a href="/api/v1/">Inicio</a></li>
            <li><a href="/api/v1/albums">Álbumes</a></li>
            <li><a href="/api/v1/tracks">Canciones</a></li>
            <li><a href="/api/v1/chat">Chat</a></li>
            <li><a href="/api/v1/spotify">Spotify</a></li>
            <li><a href="/api/v1/musicbrainz">MusicBrainz</a></li>
        </ul>
    </div>
    <button class="navbar-toggle" id="navbar-toggle">&#9776;</button>
    <div class="container">
        <div class="main-content">
            <h1>Lista de Artistas</h1>
                <% if (artists.length > 0) { %>
                    <ul>
                        <% artists.forEach(artist => { %>
                            <li>
                                <h2><%= artist.artist_name %></h2>
                                <p><strong>URI:</strong> <%= artist.artist_uris %></p>
                                <p><strong>Artista:</strong> <%= artist.artist_names %></p>
                                <img src="<%= artist.artist_image_url %>" alt="<%= artist.artist_name %>" style="max-width: 200px;">
                            </li>
                        <% }); %>
                    </ul>
                    <% if (next) { %>
                        <div style="text-align: center;">
                            <button onclick="window.location.href='/api/v1/artists?next=<%= next %>'">Siguiente</button>
                        </div>
                    <% } %>
                <% } else { %>
                    <p class="no-artists"><%= message || 'No se encontraron artistas.' %></p>
                <% } %>
        </div>
        <div class="form-list">
            <div class="form-container">
                <h2>(GET) Barra de Búsqueda</h2>
                <!-- El formulario no necesita action ya que se manejará mediante JavaScript -->
                <form id="searchForm" method="GET">
                    <label for="search_query">Buscar artista por URI:</label>
                    <input type="text" id="search_query" name="search_query" required>
                    <button type="submit">Buscar</button>
                </form>
            </div>
            <div class="form-container">
                <h2>(POST) Añadir Álbum</h2>
                <form action="/api/v1/artists" method="POST">
                    <label for="artist_name">Nombre del Artista:</label>
                    <input type="text" id="artist_name" name="artist_name" required>

                    <label for="artist_uri">URI del Artista:</label>
                    <input type="text" id="artist_uri" name="artist_uri" required>

                    <button type="submit">Añadir Artista</button>
                </form>
            </div>
            <div class="form-container">
                <h2>(DELETE) Eliminar Álbum</h2>
                    <form id="deleteForm" action="/api/v1/artists" method="POST">
                        <input type="hidden" name="_method" value="DELETE">
                        <!-- Campos del formulario de eliminar álbum -->
                        <label for="artist_id">ID del artista a Eliminar:</label>
                        <input type="text" id="artist_id" name="artist_id" required>
                        <button type="submit">Eliminar Álbum</button>
                    </form>
            </div>
            <div class="form-container">
                <h2>(PUT)</h2>
                    <form id="putForm" action="/api/v1/artists" method="POST">
                        <input type="hidden" name="_method" value="PUT">

                        <label for="artist_id">URI actual del artista:</label>
                        <input type="text" id="artist_put" name="artist_put" required>

                        <label for="artist_name">Nombre del artista:</label>
                        <input type="text" id="artist_name_put" name="artist_name_put" required>

                        <label for="artist_uri">Nueva URI del artista:</label>
                        <input type="text" id="artist_uri_put" name="artist_uri_put" required>


                        <button type="submit">put</button>
                    </form>
            </div>
        </div>
    </div>
    <script src="/js/scriptsArtists.js"></script>
</body>
</html>
