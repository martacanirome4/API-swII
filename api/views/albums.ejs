<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cliente de Álbumes</title>
    <style>
        body {
            background-color: #121212;
            color: #00ff00;
            font-family: Arial, sans-serif;
            padding: 20px;
        }
        h1 {
            color: #00ff00;
        }
        .album-container {
            margin-bottom: 20px;
            padding: 10px;
            border: 1px solid #00ff00;
            background-color: #212121;
        }
        form {
            margin-bottom: 20px;
        }
        input[type="text"] {
            padding: 5px;
            border: 1px solid #00ff00;
            background-color: #121212;
            color: #00ff00;
        }
        input[type="submit"], button {
            padding: 5px 10px;
            background-color: #00ff00;
            color: #121212;
            border: none;
            cursor: pointer;
        }
        button {
            margin-left: 10px;
        }
    </style>
</head>
<body>
    <h1>Lista de Álbumes</h1>

    <div id="albums-container"></div>

    <h2>Añadir Nuevo Álbum</h2>
    <form id="add-album-form">
        <label for="album-name">Nombre:</label>
        <input type="text" id="album-name" name="name" required><br>
        <label for="artist-names">Artista(s):</label>
        <input type="text" id="artist-names" name="artist_names" required><br>
        <label for="release-year">Año de Lanzamiento:</label>
        <input type="text" id="release-year" name="release_year" required><br>
        <label for="genre">Género:</label>
        <input type="text" id="genre" name="genre" required><br>
        <input type="submit" value="Añadir Álbum">
    </form>

    <script>
        function getAlbums() {
            fetch('/api/albums')
                .then(response => response.json())
                .then(data => {
                    const albumsContainer = document.getElementById('albums-container');
                    albumsContainer.innerHTML = '';

                    data.albums.forEach(album => {
                        const albumElement = document.createElement('div');
                        albumElement.classList.add('album-container');
                        albumElement.innerHTML = `
                            <h2>${album.name}</h2>
                            <p><strong>Artista(s):</strong> ${album.artist_names.join(', ')}</p>
                            <p><strong>Año de lanzamiento:</strong> ${album.release_year}</p>
                            <p><strong>Género:</strong> ${album.genre}</p>
                            <button onclick="editAlbum('${album.album_uri}')">Editar</button>
                            <button onclick="deleteAlbum('${album.album_uri}')">Borrar</button>
                        `;
                        albumsContainer.appendChild(albumElement);
                    });
                })
                .catch(error => {
                    console.error('Error al obtener la lista de álbumes:', error);
                });
        }

        getAlbums();

        const addAlbumForm = document.getElementById('add-album-form');
        addAlbumForm.addEventListener('submit', event => {
            event.preventDefault();
            const formData = new FormData(addAlbumForm);
            const albumData = {};
            formData.forEach((value, key) => {
                albumData[key] = value;
            });
            fetch('/api/albums', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(albumData)
            })
            .then(response => response.json())
            .then(data => {
                console.log(data.message);
                getAlbums();
            })
            .catch(error => {
                console.error('Error al añadir el álbum:', error);
            });
        });

        function editAlbum(albumUri) {
            const newName = prompt('Introduce el nuevo nombre del álbum:');
            if (newName) {
                fetch(`/api/albums/${encodeURIComponent(albumUri)}`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ name: newName })
                })
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                    getAlbums();
                })
                .catch(error => {
                    console.error('Error al editar el álbum:', error);
                });
            }
        }

        function deleteAlbum(albumUri) {
            if (confirm('¿Seguro que deseas borrar este álbum?')) {
                fetch(`/api/albums/${encodeURIComponent(albumUri)}`, {
                    method: 'DELETE'
                })
                .then(response => response.json())
                .then(data => {
                    console.log(data);
                    getAlbums();
                })
                .catch(error => {
                    console.error('Error al borrar el álbum:', error);
                });
            }
        }
    </script>
</body>
</html>
